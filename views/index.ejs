      } else if (provinsi == "Jawa Timur") {
        list.push("Surabaya", "Malang", "Kediri", "Madiun", "Lamongan")
      } else {
        let list = [];
      }

      let kota = "";
      for (let i = 0; i < list.length; i++) {
        kota += "<option>" + list[i] + "</option>"
      }

      document.getElementById('kota').innerHTML = kota;
    }
