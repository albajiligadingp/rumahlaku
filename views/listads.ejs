    <div class="container">
        <h1 class="display-5" style="text-align: center; margin-top: 30px;"><i
                class="fas fa-home mr-2 text-dark"></i>rumahlaku</h1>
        <h3 style="margin-top: 30px; font-weight: bold;">Ini daftar iklanmu, <%= user.nama %></h3>
        <form for="form-listads" action="/listads" method="POST"></form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col" style="text-align: center;">ID Iklan</th>
                    <th scope="col" style="text-align: center;">Judul Iklan</th>
                    <th scope="col" style="text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((data) => { %>
                <tr>
                    <th scope="row" style="text-align: center;"><%= data.idiklan %></th>
                    <td style="text-align: center;"><%= data.judul %></td>
                    <td style="text-align: center;">
                        <button type="button" class="btn btn-success" data-toggle="modal"
                            data-target="#detailiklan">Edit</button>
                        <div class="modal fade" id="detailiklan" data-backdrop="static" tabindex="-1"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Detail Iklan</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body" style="text-align: left;">
                                        <form>
                                            <div class="form-group row" style="margin-top: 10px;">
                                                <label for="nama" class="col-sm-2 col-form-label">Judul Iklan</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="judul" name="judul" value="<%= data.judul %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Tipe Rumah</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="tipe" name="tipe" value="<%= data.tipe %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Luas Tanah</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="luastanah"
                                                        name="luastanah" value="<%= data.luastanah %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Luas Bangunan</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="luasbangunan"
                                                        name="luasbangunan" value="<%= data.luasbangunan %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Kamar Tidur</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="kamartidur"
                                                        name="kamartidur" value="<%= data.kamartidur %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Kamar Mandi</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="kamarmandi"
                                                        name="kamarmandi" value="<%= data.kamarmandi %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Lantai</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="lantai" name="lantai" value="<%= data.lantai %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Fasilitas</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="fasilitas"
                                                        name="fasilitas" value="<%= data.fasilitas %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Carport</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="carport" name="carport" value="<%= data.carport %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Sertifikasi</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="sertifikasi"
                                                        name="sertifikasi" value="<%= data.sertifikasi %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Harga</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="harga" name="harga" value="<%= data.harga %>">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="alamatlengkap" style="margin-top: 10px;">Alamat
                                                    Lengkap</label>
                                                <input type="text" class="form-control" id="alamat" rows="3"
                                                    name="alamat" value="<%= data.alamat %>"></input>
                                            </div>
                                            <div class="form-group">
                                                <label for="deskripsi" style="margin-top: 10px;">Deskripsi</label>
                                                <input type="text" class="form-control" id="deskripsi"
                                                    name="deskripsi" value="<%= data.deskripsi %>"></input>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Gambar</label>
                                                <div class="col-sm-10">
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input"
                                                            id="inputGroupFile03" name="gambar" value="<%= data.gambar %>">
                                                        <label class="custom-file-label" for="inputGroupFile03">Pilih
                                                            gambar</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 style="margin-top: 30px; font-weight: bold;">Detail Penjual</h5>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">Nama Penjual</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="penjual" name="penjual" value="<%= data.penjual %>">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="nama" class="col-sm-2 col-form-label">No Handphone</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="nohppenjual"
                                                        name="nohppenjual" value="<%= data.nohppenjual %>">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Update</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a style="color: white" onclick="return confirm('Delete your ads?')">
                            <button type="button" class="btn btn-danger">Delete</button>
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
